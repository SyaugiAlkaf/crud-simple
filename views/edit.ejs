<!-- views/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Siswa</title>
</head>
<body>
    <h1>Edit Data Siswa</h1>
    <% if (error_msg) { %>
        <p><%= error_msg %></p>
    <% } %>
    <form action="/edit/<%= siswa.nis %>" method="post">
        <label for="nis">NIS:</label><br>
        <input type="text" id="nis" name="nis" value="<%= siswa.nis %>" readonly><br>
        <label for="nama">Nama:</label><br>
        <input type="text" id="nama" name="nama" value="<%= siswa.nama %>"><br>
        <label for="alamat">Alamat:</label><br>
        <input type="text" id="alamat" name="alamat" value="<%= siswa.alamat %>"><br>
        <label for="hobi">Hobi:</label><br>
        <input type="text" id="hobi" name="hobi" value="<%= siswa.hobi %>"><br><br>
        <button type="submit">Simpan</button>
    </form>
</body>
</html>
